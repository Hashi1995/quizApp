<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Congradulations!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#ADD8E6"
        android:background="#00008B" />


    <TextView
        android:id="@+id/finalScoretext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Final Score: 0"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/title"/>


    <Button
        android:id="@+id/btntakeNewQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take New Quiz"
        android:layout_below="@id/finalScoretext"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        android:backgroundTint="#1976D2"
        android:textColor="#FFFFFF"/>


    <Button
        android:id="@+id/btnfinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:layout_below="@id/btntakeNewQuiz"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        android:backgroundTint="#1976D2"
        android:textColor="#FFFFFF"/>
</RelativeLayout>
